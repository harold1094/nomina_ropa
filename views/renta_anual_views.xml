<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- LIST VIEW RENTAS -->
    <record id="view_nominas_ropa_renta_list" model="ir.ui.view">
        <field name="name">nominas.ropa.renta.list</field>
        <field name="model">nominas.ropa.renta</field>
        <field name="arch" type="xml">
            <list string="Declaraciones de la renta">
                <field name="employee_id"/>
                <field name="year"/>
                <field name="total_gross"/>
                <field name="total_irpf"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW RENTAS -->
    <record id="view_nominas_ropa_renta_form" model="ir.ui.view">
        <field name="name">nominas.ropa.renta.form</field>
        <field name="model">nominas.ropa.renta</field>
        <field name="arch" type="xml">
            <form string="Declaración de la renta">
                <sheet>
                    <group>
                        <field name="employee_id"/>
                        <field name="year"/>
                    </group>

                    <group string="Totales">
                        <field name="total_gross" readonly="1"/>
                        <field name="total_irpf" readonly="1"/>
                    </group>

                    <notebook>
                        <page string="Nóminas incluidas">
                            <field name="nomina_ids">
                                <list>
                                    <field name="date"/>
                                    <field name="base_salary"/>
                                    <field name="total_bonuses"/>
                                    <field name="gross_for_irpf"/>
                                    <field name="irpf_percent"/>
                                    <field name="irpf_amount"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION RENTAS -->
    <record id="action_nominas_ropa_renta" model="ir.actions.act_window">
        <field name="name">Declaraciones de la renta</field>
        <field name="res_model">nominas.ropa.renta</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
